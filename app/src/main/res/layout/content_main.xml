<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainFragment">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shil_conversion_label"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/shil_conversion"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/shil_conversion_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dolr_conversion_label"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/dolr_conversion"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/dolr_conversion_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/quid_conversion_label"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/quid_conversion"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/quid_conversion_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/peny_conversion_label"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="@string/peny_conversion"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/peny_conversion_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
        </TableRow>

        <TableRow
            android:id="@+id/coinRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCoinIcon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_quid" />

            <TextView
                android:id="@+id/coinType1"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="QUID"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/coinValue1"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="5"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/coinDistance1"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="100 Metres" />

            <TextView
                android:id="@+id/coinDirection1"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="East" />
        </TableRow>

        <TableRow
            android:id="@+id/coinRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCoinIcon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_quid" />

            <TextView
                android:id="@+id/coinType2"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="QUID"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/coinValue2"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="5"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/coinDistance2"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="100 Metres" />

            <TextView
                android:id="@+id/coinDirection2"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="East" />
        </TableRow>

        <TableRow
            android:id="@+id/coinRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCoinIcon3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_quid" />

            <TextView
                android:id="@+id/coinType3"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="QUID"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/coinValue3"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="5"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/coinDistance3"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="100 Metres" />

            <TextView
                android:id="@+id/coinDirection3"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="East" />
        </TableRow>

        <TableRow
            android:id="@+id/coinRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCoinIcon4"
                android:layout_width="40dp"
                android:layout_height="40dp"

                app:srcCompat="@drawable/ic_quid" />

            <TextView
                android:id="@+id/coinType4"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="QUID"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/coinValue4"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="5"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/coinDistance4"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="100 Metres" />

            <TextView
                android:id="@+id/coinDirection4"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="East" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnGoToShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="108dp"
        android:onClick="onShopButtonClicked"
        android:text="Go to shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:text="Not enough information?"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToShop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:layout_constraintVertical_bias="0.921" />

</android.support.constraint.ConstraintLayout>